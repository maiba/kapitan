<ul>
  <% if Admin::AdsController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_ads_url
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), new_admin_ad_url,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::AdsController.sortable? and Ad.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "Ads"),
                 admin_ads_url,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Ads"),
                 admin_ads_url,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>