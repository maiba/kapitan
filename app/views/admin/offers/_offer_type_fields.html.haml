%fieldset.nested-fields
  %legend= f.object.class.model_name.human
  .field
    = f.label :title, :class => "stripped"
    = f.text_field :title
    
    = f.label :pic
    = render :partial => "/shared/admin/image_picker", :locals => {:f => f, :field => :pic_id, :image => f.object.pic, :toggle_image_display => false }
    
    = f.label :description
    = f.text_area :description, :cols => "100", :rows => "3"
   
    %fieldset
      %legend= f.object.class.human_attribute_name :offer_properties
      = f.label :offer_properties
      = f.fields_for :offer_properties do |op_f|
        = render 'offer_property_fields', :f => op_f
      .links
        = link_to_add_association t('.add_property'), f, :offer_properties
  = link_to_remove_association t('.remove_type'), f, :style => 'float:right;margin-top:10px;'
     