%h1 Заказы
.account-page.white-pad
  %table.orders{:style => "width:100%;", :border => 1, :cellpadding => 5, :cellspacing => 0}
    %thead
      %tr
        %th= " "
        - [:price, :created_at, :status].each do |attr|
          %th=sortable attr
    %tbody
      - @orders.each do |order|
        %tr
          %td
            %strong= "Заказ №"
            %strong= order.id
          %td= order.price.to_s + " грн " unless order.price.blank?
          %td= l order.created_at, :format => '%d.%m.%y'
          %td.button-order= link_to t(order.status, :scope => 'activerecord.attributes.order.statuses'), [:cabinet, order]
      %tr
        - [:id, :status, :created_at].each do |attr|
          %td= " "
        %td &nbsp;
= render 'accounts/shared/menu'
.clearfix